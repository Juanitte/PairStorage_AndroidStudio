<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputLayout_phone"
        android:layout_width="206dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="29dp"
        android:textColorHint="#D1D1D1"
        app:boxBackgroundColor="#2E2E2E"
        app:layout_constraintStart_toEndOf="@+id/txt_phone"
        app:layout_constraintTop_toBottomOf="@+id/txtInputLayout_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtInput_phone"
            android:layout_width="207dp"
            android:layout_height="44dp"
            android:height="48dp"
            android:hint="teléfono"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:text="Teléfono: "
        android:textColor="#1C1C1C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="390dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="PairStorage"
        android:textAlignment="center"
        android:textColor="#1B1B1B"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/btn_toggle"
        android:layout_width="733dp"
        android:layout_height="62dp"
        android:background="#131313"
        android:text="ToggleButton"
        android:textColor="#FFFFFF"
        android:textOff="Consultar"
        android:textOn="Introducir"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="75dp"
        android:text="Nombre: "
        android:textColor="#1C1C1C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputLayout_name"
        android:layout_width="206dp"
        android:layout_height="48dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="67dp"
        android:textColorHint="#D1D1D1"
        app:boxBackgroundColor="#2E2E2E"
        app:layout_constraintStart_toEndOf="@+id/txt_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtInput_name"
            android:layout_width="207dp"
            android:layout_height="44dp"
            android:height="48dp"
            android:hint="nombre"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="174dp"
        android:layout_height="55dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="118dp"
        android:backgroundTint="#474747"
        android:text="Introducir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInputLayout_phone" />

</androidx.constraintlayout.widget.ConstraintLayout>